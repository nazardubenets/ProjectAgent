<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<global-method-security secured-annotations="enabled" />

	<http use-expressions="true" access-denied-page="/accessDenied.htm">

		<intercept-url pattern="/admin/**" access="hasRole ( 'ROLE_ADMIN' )" />

		<intercept-url pattern="/user/**"
			access="hasAnyRole ( 'ROLE_USER', 'ROLE_ADMIN')" />

		<intercept-url pattern="/login.jspx" access="hasRole ( 'ROLE_ANONYMOUS' )" />

		<form-login login-processing-url="/j_spring_security_check"
			login-page="/login.htm" default-target-url="/user/userWelcome.htm"
			authentication-failure-url="/login.htm" />

		<logout />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="userDetailsService">
		</authentication-provider>
	</authentication-manager>

</beans:beans>