<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:prime="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core">

	<h:head>
	</h:head>
	<h:body>
		<ui:composition template="/WEB-INF/templates/default.jspx">
			<ui:define name="content">
				<h:outputScript library="js" name="user/employee/project/list.js" target="body" />
				<h:form prependId="false" id="mainForm">
					<prime:dataTable id="accounts" var="account" value="#{listAccountsBean.allAccounts}" selection="#{listAccountsBean.selectedAccounts}" rowKey="#{account.id}">
				        <prime:column selectionMode="multiple" style="width:5%;text-align:center"/>
				        <prime:column headerText="Id">
				            <h:outputText value="#{account.id}" />
				        </prime:column>
				        <prime:column headerText="Username">
				            <h:outputText value="#{account.username}" />
				        </prime:column>
				        <prime:column headerText="Role">
				            <h:outputText value="#{account.role}" />
				        </prime:column>
				        <prime:column headerText="Blocked">
				            <h:outputText value="#{account.blocked}" />
				        </prime:column>
				        <f:facet name="footer">
				            <prime:commandButton update=":mainForm:accounts" icon="ui-icon-search" value="Block" action="#{listAccountsBean.block()}" />
				            <prime:commandButton update=":mainForm:accounts" icon="ui-icon-search" value="Unblock" action="#{listAccountsBean.unblock()}" />
				        </f:facet>
				    </prime:dataTable>
				</h:form>
    		</ui:define>
		</ui:composition>
	</h:body>
</html>
