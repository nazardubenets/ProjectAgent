<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:prime="http://primefaces.org/ui"
	xmlns:f="http://java.sun.com/jsf/core">

	<h:head>
	</h:head>
	<h:body>
		<ui:composition template="/WEB-INF/templates/default.jspx">
			<ui:define name="content">
				<h:form prependId="false">
					<prime:panel header="Masks">  
				        <h:panelGrid columns="2" cellpadding="5">  
				            <h:outputText value="#{message.project_name}" />  
				            <prime:inputText value="#{createOrEditProjectBean.project.name}"/>
				              
				            <h:outputText value="#{message.project_description}" />  
				            <prime:editor id="editor" value="#{createOrEditProjectBean.project.description}" width="600"/>
				              
				            <h:outputText value="#{message.project_startDate}" />  
				            <prime:calendar value="#{createOrEditProjectBean.project.startTime}" id="startDate" mindate="new Date();" maxdate="#{createOrEditProjectBean.project.endTime}" locale="#{languageBean.selectedLanguage}">
				            	<prime:ajax event="dateSelect" update="endDate" />
				            </prime:calendar>
				            
				            <h:outputText value="#{message.project_endDate}" />  
				            <prime:calendar value="#{createOrEditProjectBean.project.endTime}" id="endDate" mindate="#{createOrEditProjectBean.project.startTime}" locale="#{languageBean.selectedLanguage}">
				            	 <prime:ajax event="dateSelect" update="startDate" />  
				            </prime:calendar>
				          
				            <h:commandButton type="submit" value="#{message.common_save}" action="#{createOrEditProjectBean.saveProject}" styleClass="projectagent-command-button"/>  
				            <h:commandButton type="reset" value="#{message.common_reset}" styleClass="projectagent-command-button"/>  
				        </h:panelGrid>  
				    </prime:panel>
				</h:form>
    		</ui:define>
		</ui:composition>
	</h:body>
</html>
